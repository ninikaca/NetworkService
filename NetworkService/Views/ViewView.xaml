                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{StaticResource GradientColorOne}" />
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />

                                        <HierarchicalDataTemplate DataType="{x:Type model:BindingEntity}" ItemsSource="{Binding listOfEntities}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Addresses}" FontSize="20" FontWeight="SemiBold" Foreground="Black"/>
                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                        <DataTemplate DataType="{x:Type model:Entity}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Run Text="{Binding Name}" />
                                    <Run Text="      " />
                                                </TextBlock>
                                                <Image Source="{Binding Picture}" Width="40" />
                                                <TextBlock Margin="10, 0, 0, 0" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Color}" Value="false">
                                                                    <Setter Property="Foreground" Value="Green" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Color}" Value="true">
                                                                    <Setter Property="Foreground" Value="Red" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                    <Run Text="{Binding Occupied}" />
                                    <Run Text="%  " />
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </TreeView.Resources>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonUp">
                                            <i:InvokeCommandAction Command="{Binding ClickLeftMouse}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="SelectedItemChanged">
                                            <i:InvokeCommandAction Command="{Binding ChosenTreeView}" CommandParameter="{Binding ElementName=treeView}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TreeView>

                                <Button Content="RANDOM SHUFFLE" Grid.Row="1" Margin="10" FontWeight="Bold" Command="{Binding CommandAddAllToGrid}" CommandParameter="{Binding ElementName=rightGridOnCanvas}" FontSize="22" Background="{StaticResource UIRedColor}">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
